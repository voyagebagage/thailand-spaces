---
import CheapButton from "../utils/CheapButton.astro";
import ContactInput from "../utils/ContactInput.astro";
---

<section class="mb-20">
  <h2 class="text-title mb-8">keep in touch with us</h2>
  <form
    action="https://api.web3forms.com/submit"
    method="POST"
    class="grid gap-4 md:grid-cols-2 md:gap-8">
    <input
      type="hidden"
      name="access_key"
      value="dc2e3754-3766-4c06-a716-e63f7e467d05"
    />
    <input
      type="hidden"
      name="subject"
      value="New Submission from Web3Forms VIRTUAL TOUR"
    />
    <ContactInput name='name' label="name" required id="1" placeholder="input your name" />
    <ContactInput
    name='company'
      label="company"
      required
      id="2"
      placeholder="input your company"
    />
    <ContactInput
      type="email"
      name='email'
      label="email"
      required
      id="2"
      placeholder="input your email"
    />
    <textarea name="message" required placeholder="input your message"
    ></textarea>
    <input type="hidden" name="redirect" value="https://web3forms.com/success">
    <button
    class="bg-primary-500 text-white py-2 px-4 rounded-md hover:bg-primary-600"
    type="submit">
    Submit
  </button>
  <div>
    <span class="block mb-2 opacity-80">services</span>
    <div class="flex items-end gap-4 flex-wrap text-sm">
      <CheapButton>architecture</CheapButton>
      <CheapButton>interior</CheapButton>
      <CheapButton>furnitures</CheapButton>
    </div>
  </div>
  </form>
</section>

<script src="https://web3forms.com/client/script.js" async defer></script>
